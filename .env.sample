# GitHub Apps認証
# GitHub Appとして認証する場合（推奨）
GITHUB_APP_ID=123456
GITHUB_APP_INSTALLATION_ID=12345678
GITHUB_APP_PRIVATE_KEY_PATH=/path/to/private-key.pem
# または、Private Keyを直接環境変数に設定（改行は\nで表現）
# GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\n...\n-----END RSA PRIVATE KEY-----"

# Personal Access Tokenで認証する場合（非推奨）
# GITHUB_TOKEN=your_personal_access_token_here

# データベース設定
# 開発環境ではモックモードを使用（推奨）
USE_DB_MOCK=true

# モックモード時の監視対象リポジトリ設定（JSON形式）
REPOSITORIES_JSON='[{"owner":"your-org","repo":"your-repo"}]'

# PostgreSQL接続情報（本番環境用）
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=nagare
DATABASE_USER=nagare_user
DATABASE_PASSWORD=your_secure_password_here

# Airflow設定
# アラート通知先のメールアドレス
AIRFLOW_ALERT_EMAIL=admin@example.com
